# This file should be located in /etc/logrotate.d/home_automation
/var/log/home_automation_server.log {
        rotate 123
        compress
        delaycompress
        missingok
        nomail
        postrotate
                invoke-rc.d rsyslog rotate > /dev/null
        endscript
}
/var/log/home_automation_persistence.log {
        rotate 123
        compress
        delaycompress
        missingok
        nomail
        postrotate
                invoke-rc.d rsyslog rotate > /dev/null
        endscript
}
